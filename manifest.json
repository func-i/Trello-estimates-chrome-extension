{
  "manifest_version": 2,

  "name": "FI Trello Estimation Tool",
  "description": "Estimate task time on Trello cards",
  "version": "0.1",

  "permissions": [
    "tabs",
    "https://raw.githubusercontent.com/",
    "https://trello.com/",
    "https://localhost:5000/estimations",
    "https://estimation-fi.herokuapp.com/estimations"
  ],

  "background": {
    "scripts": [
      "/dist/js/vendor.js",
      "/dist/js/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://trello.com/*"
      ],
      "css": [
        "/dist/css/vendor.css",
        "/dist/css/styles.css"
      ],
      "js": [
        "/dist/js/vendor.js",
        "/dist/js/app.js", // keep this line only for development
        "/dist/js/content.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "/dist/html/estimation_modal.html",
    "/dist/html/estimations.html",
    "/dist/html/card_estimation_btn.html",
    "/dist/img/ui-icons_ef8c08_256x240.png",
    "/dist/img/ui-icons_222222_256x240.png",
    "/dist/img/ui-bg_diagonals-thick_20_666666_40x40.png",
    "/dist/img/ui-bg_glass_100_f6f6f6_1x400.png",
    "/dist/img/ui-bg_glass_100_fdf5ce_1x400.png",
    "/dist/img/ui-bg_glass_65_ffffff_1x400.png",
    "/dist/img/ui-bg_highlight-soft_100_eeeeee_1x100.png"
  ]
}
