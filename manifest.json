{
  "manifest_version": 2,

  "name": "FI Trello Estimation Tool",
  "description": "Estimate task time on Trello cards",
  "version": "0.1",

  "permissions": [
    "tabs",
    "https://localhost:5000/estimations",
    "https://estimation-fi.herokuapp.com/estimations"
  ],

  "background": {
    "scripts": [
      // "https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.1/jquery.min.js",
      // "https://raw.githubusercontent.com/func-i/Trello-estimates-chrome-extension/load-files/dist/background.js"
      "/dist/vendor/jquery-1.10.1.min.js",
      "/dist/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://trello.com/*"
      ],
      "css": [
        // "https://raw.githubusercontent.com/func-i/Trello-estimates-chrome-extension/load-files/dist/styles.css"
        "/dist/styles.css"
      ],
      "js": [
        // "https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.1/jquery.min.js",
        // "https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js",
        // "https://raw.githubusercontent.com/func-i/Trello-estimates-chrome-extension/load-files/dist/content.js"
        "/dist/vendor/jquery-1.10.1.min.js",
        "/dist/vendor/jquery-ui-1.10.3.custom.min.js",
        "/dist/content.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "/dist/html/estimation_modal.html",
    "/dist/html/estimations.html",
    "/dist/html/card_estimation_btn.html",
    "/dist/image/ui-icons_ef8c08_256x240.png",
    "/dist/image/ui-icons_222222_256x240.png",
    "/dist/image/ui-bg_diagonals-thick_20_666666_40x40.png",
    "/dist/image/ui-bg_glass_100_f6f6f6_1x400.png",
    "/dist/image/ui-bg_glass_100_fdf5ce_1x400.png",
    "/dist/image/ui-bg_glass_65_ffffff_1x400.png",
    "/dist/image/ui-bg_highlight-soft_100_eeeeee_1x100.png"
  ]
}
